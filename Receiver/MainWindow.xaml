<Window x:Class="Vlc.DotNet.Wpf.Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vlc="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
        xmlns:Wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <vlc:VlcControl Grid.Column="1" Grid.Row="1" x:Name="vlcPlayer" />
        <Button Content="Stop" HorizontalAlignment="Left" Margin="0,190,0,0" VerticalAlignment="Top" Width="69" Name="StopButton" Click="StopButton_Click" Height="24" RenderTransformOrigin="-4.882,-9.6"/>
    </Grid>
</Window>